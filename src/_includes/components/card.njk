{% macro card(title, subtitle = '', icon = '', imgUrl='', url = '') %}
  <div class="card round shadow clickable" onclick="location.href = '{{ url }}'">
    <div class="card-container">
      <div class="center">
        <a href="{{ url }}" alt="Image or icon link to: {{ title }}">
          {% if icon %}<img src="/img/icons/{{ icon }}.svg" alt="{{ icon }}"/>{% endif %}
          {% if imgUrl %}<img src="{{ imgUrl }}" alt="Image for {{ title }}"/>{% endif %}
        </a>
      </div>
      <div class="card-details">
        <a href="{{ url }}" class="margin-none card-title">{{ title }}</a>
        {% if subtitle %}<p class="margin-none max-lines-3">{{ subtitle }}</p>{% endif %}
      </div>
    </div>
  </div>
{% endmacro %}