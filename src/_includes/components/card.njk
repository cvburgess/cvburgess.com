{% macro card(title, subtitle = '', icon = '', url = '') %}
  <div class="card round shadow clickable" onclick="location.href = '{{ url }}'">
    <div class="card-container">
      <div class="center">
        <a href="{{ url }}">
          <img src="/img/icons/{{ icon }}.svg"/>
        </a>
      </div>
      <div class="card-details">
        <a href="{{ url }}">
          <h3 class="margin-none capitalize">{{ title }}</h3>
        </a>
        {% if subtitle
        -%}
          <p class="margin-none max-lines-3">{{ subtitle }}</p>
        {%- endif %}
      </div>
    </div>
  </div>
{% endmacro %}