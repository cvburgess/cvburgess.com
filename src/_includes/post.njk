---
layout: base
---
{% from 'components/tagList.njk' import tagList %}

<link rel="stylesheet" href="{{ '/css/post.css' | url }}"/>

<div>
  <h1 class="title">{{ title }}</h1>
  <div class="center no-wrap">
    <span class="line outer-line"></span>
    <img class="line post-icon" src="/img/icons/{{ type }}.svg" aria-hidden="true" alt="{{ type }} icon"/>
    <span class="line outer-line"></span>
  </div>
</div>
<div class="post">
  {{ content | safe }}
</div>

<div class="center margin-xlarge-vertical hidden-print-only">
  <a class="margin-medium" href="/lead-with-joy">← Back to the Hub</a>
  <span class="margin-medium hidden-mobile-only"> • </span>
  <a class="margin-medium" href="{{ metadata.repoUrl }}/blob/main/{{ page.inputPath }}">Suggest an Edit on GitHub</a>
</div>

<div class="print-only center margin-medium">
  <p>Charles Burgess © 2023</p>
</div>